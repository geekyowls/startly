{
  "name": "mail-smtp",
  "description": "Email service using SMTP for sending transactional emails with template support",
  "category": "communication",
  "required": false,
  "deps": {
    "nodemailer": "^6.9.0"
  },
  "devDeps": {
    "@types/nodemailer": "^6.4.0"
  },
  "env": [
    { "key": "SMTP_HOST", "required": true, "example": "smtp.gmail.com" },
    { "key": "SMTP_PORT", "required": true, "example": "587" },
    { "key": "SMTP_USER", "required": true, "example": "your-email@gmail.com" },
    { "key": "SMTP_PASS", "required": true, "example": "your-app-password" },
    { "key": "MAIL_FROM", "required": true, "example": "noreply@example.com" },
    { "key": "MAIL_FROM_NAME", "required": false, "example": "My App" }
  ],
  "routes": [
    "/mail/send",
    "/mail/templates",
    "/mail/templates/:id"
  ],
  "dependsOn": ["config", "database"],
  "optionalDeps": [],
  "qualityChecklist": ["unit-tests", "e2e-tests", "README", "openapi"],
  "filesPath": "files",
  "conflicts": ["mail-resend"],
  "inject": {
    "src/app.module.ts": {
      "import": ["import { MailModule } from '@modules/mail/mail.module';"],
      "register": ["MailModule"]
    }
  },
  "fileStructure": [
    {
      "name": "mail",
      "type": "folder",
      "path": "src/modules/mail",
      "children": [
        {
          "name": "dto",
          "type": "folder",
          "children": [
            { "name": "index.ts", "type": "file" },
            {
              "name": "request",
              "type": "folder",
              "children": [
                { "name": "password-reset-email.dto.ts", "type": "file" },
                { "name": "verification-email.dto.ts", "type": "file" },
                { "name": "welcome-email.dto.ts", "type": "file" }
              ]
            },
            {
              "name": "response",
              "type": "folder",
              "children": [
                { "name": "email-send.response.dto.ts", "type": "file" }
              ]
            }
          ]
        },
        {
          "name": "services",
          "type": "folder",
          "children": [
            { "name": "template.service.ts", "type": "file" }
          ]
        },
        { "name": "send-email.dto.ts", "type": "file" },
        { "name": "mail.controller.ts", "type": "file" },
        { "name": "mail.module.ts", "type": "file" },
        { "name": "mail.service.ts", "type": "file" }
      ]
    },
    {
      "name": "template.entity.ts",
      "type": "file",
      "path": "src/database/entities"
    },
    {
      "name": "template.repository.ts",
      "type": "file",
      "path": "src/database/repositories"
    }
  ],
  "postInstall": []
}